<body>
  <div class="quiz-container">
    <h1>Exam Insight Quiz</h1>
    
    <div class="question">
      <h3>1. What is the capital of India?</h3>
      <ul>
        <li><input type="radio" name="q1" value="0"> Mumbai</li>
        <li><input type="radio" name="q1" value="1"> New Delhi</li>
        <li><input type="radio" name="q1" value="0"> Kolkata</li>
      </ul>
    </div>
    
    <div class="question">
      <h3>2. If 2x + 3 = 7, what is x?</h3>
      <ul>
        <li><input type="radio" name="q2" value="1"> 2</li>
        <li><input type="radio" name="q2" value="0"> 3</li>
        <li><input type="radio" name="q2" value="0"> 4</li>
      </ul>
    </div>
    
    <button onclick="checkAnswers()">Submit Quiz</button>
    <div id="result"></div>
  </div>

  <script>
    function checkAnswers() {
      let score = 0;
      const total = 2;
      
      const q1 = document.querySelector('input[name="q1"]:checked');
      const q2 = document.querySelector('input[name="q2"]:checked');
      
      if (q1) score += parseInt(q1.value);
      if (q2) score += parseInt(q2.value);
      
      document.getElementById('result').innerHTML = `You scored ${score} out of ${total}!`;
    }
  </script>
